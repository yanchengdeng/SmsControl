<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_bank"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_bank_id"
        android:text="银行卡id：id"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_16"
        android:layout_toRightOf="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/iv_selected"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:src="@mipmap/unchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_card_name"
        android:text="***银行卡"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_selected"
        android:layout_below="@+id/tv_bank_id"
        android:textColor="@color/color_4d4d4d"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
