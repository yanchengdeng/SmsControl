<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ui_bg"
    tools:context=".ui.fragments.MineFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_horizontal_margin">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wan_heads" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@+id/icon"
            android:gravity="left"
            android:textColor="@color/color_222222"
            android:text="小李子"
            android:textSize="@dimen/text_16sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_banks_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rl_header"
        android:background="@color/white"
        android:drawableRight="@mipmap/arrow"
        android:gravity="left"
        android:textColor="@color/color_222222"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="银行卡"
        android:textSize="@dimen/text_16sp" />



    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corner_shaper_button"
        android:gravity="center"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="50dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp" />
</RelativeLayout>